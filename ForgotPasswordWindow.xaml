<Window x:Class="DoAn.Windows.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KHÔI PHỤC MẬT KHẨU" Height="400" Width="450"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="20" Background="White" BorderBrush="#2E78A6" BorderThickness="2">
        <StackPanel Margin="30">
            <TextBlock Text="KHÔI PHỤC MẬT KHẨU" FontSize="20" FontWeight="Bold" 
                       Foreground="#2E78A6" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Tên đăng nhập" Foreground="#666" Margin="0,10,0,5"/>
            <TextBox x:Name="txtUser" Height="35" VerticalContentAlignment="Center" Padding="5"/>

            <TextBlock Text="Số CCCD (12 số)" Foreground="#666" Margin="0,10,0,5"/>
            <TextBox x:Name="txtCCCD" Height="35" VerticalContentAlignment="Center" Padding="5"/>

            <TextBlock Text="Số điện thoại" Foreground="#666" Margin="0,10,0,5"/>
            <TextBox x:Name="txtPhone" Height="35" VerticalContentAlignment="Center" Padding="5"/>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnVerify" Content="XÁC NHẬN" Click="btnVerify_Click" IsDefault="True"
                        Grid.Column="0" Margin="0,0,5,0" Height="40" Background="#2E78A6" 
                        Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                <Button Content="HỦY BỎ" Click="btnCancel_Click"
                        Grid.Column="1" Margin="5,0,0,0" Height="40" Background="#DDD" 
                        Foreground="#333" FontWeight="Bold" Cursor="Hand"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
