<Window x:Class="DoAn.RegisterPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký Bệnh Nhân" Height="650" Width="1100" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedInput" TargetType="Control">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border x:Name="border" CornerRadius="8" BorderBrush="#CCC" BorderThickness="1" Background="White">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2E78A6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="20" CornerRadius="30" Background="#F0F8FF">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Opacity="0.3" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="50,30">
                <TextBlock Text="ĐĂNG KÝ TÀI KHOẢN" FontSize="28" FontWeight="ExtraBold" Foreground="#2E78A6" Margin="0,0,0,25"/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Tên đăng nhập" VerticalAlignment="Center" Foreground="#555"/>
                    <TextBox x:Name="txtRegUser" Grid.Column="1" Style="{StaticResource RoundedInput}"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Họ tên" VerticalAlignment="Center" Foreground="#555"/>
                    <TextBox x:Name="txtRegName" Grid.Column="1" Style="{StaticResource RoundedInput}"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Số điện thoại" VerticalAlignment="Center" Foreground="#555"/>
                    <TextBox x:Name="txtRegPhone" Grid.Column="1" Style="{StaticResource RoundedInput}" MaxLength="10"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Số CCCD" VerticalAlignment="Center" Foreground="#555"/>
                    <TextBox x:Name="txtRegCID" Grid.Column="1" Style="{StaticResource RoundedInput}" MaxLength="12"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Giới tính" VerticalAlignment="Center" Foreground="#555"/>
                    <ComboBox x:Name="cbRegGender" Grid.Column="1" Height="35">
                        <ComboBoxItem Content="Male" IsSelected="True"/>
                        <ComboBoxItem Content="Female"/>
                    </ComboBox>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Ngày sinh" VerticalAlignment="Center" Foreground="#555"/>
                    <DatePicker x:Name="dpRegDOB" Grid.Column="1" Height="35"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Mật khẩu" VerticalAlignment="Center" Foreground="#555"/>
                    <PasswordBox x:Name="txtRegPass" Grid.Column="1" Height="35"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Xác nhận MK" VerticalAlignment="Center" Foreground="#555"/>
                    <PasswordBox x:Name="txtRegConfirmPass" Grid.Column="1" Height="35"/>
                </Grid>
            </StackPanel>

            <Border Grid.Column="1" Background="#2E78A6" CornerRadius="0,30,30,0">
                <StackPanel VerticalAlignment="Center">
                    <Button Content="ĐĂNG KÝ" Click="btnDoRegister_Click" Margin="20,10" Height="50" Background="White" Foreground="#2E78A6" FontWeight="Bold" Cursor="Hand"/>
                    <Button Content="THOÁT" Click="btnExit_Click" Margin="20,10" Height="50" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
